<div class="container">
    
  
  <div class="row">
    <div class="col-md-6">
      <%= link_to 'Edit', edit_broker_path(@broker) %> |
      <%= link_to 'Back', brokers_path %>
      <div class="well well-lg">
        <div class="row">
            
            <h2 class="text-left"><%= @broker.first_name %> <%= @broker.last_name %></h2>
          </p>
          </div>
        <%= @broker.email %><br>
        C <%= @broker.mobile %><br>
        D <%= @broker.direct_phone %><br>
        <br>
        <h4><%= @broker.company %></h4>
        <p><%= @broker.address %></p> 
      </div>

    </div>

  </div>


<div class="row">
  <div class="col-md-6">
    <h2>Clients</h2>
    <% if @clients.any? %>
      <% @clients.each do |commercial_lead| %>
        <table class="table table-condensed">
          <tr>
            <td>Company:</td> 
            <td><%= link_to commercial_lead.company_name, commercial_lead %></td> 
          </tr>
          <tr>
            <td>Use: </td> 
            <td><%= link_to commercial_lead.use, commercial_lead %></td> 
          </tr>
          <tr>   
            <td>Primary Contact: </td>  
            <td><%= link_to "#{commercial_lead.first_name} #{commercial_lead.last_name}", commercial_lead %></td>
          </tr> 
        </table>
        <br>
      <% end %> 
    <% end %> 
  </div>
</div>
</div>