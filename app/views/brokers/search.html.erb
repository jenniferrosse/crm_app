<div class="container">

<%= link_to 'New Broker', new_broker_path %>

<%= form_tag search_brokers_path, method: :get, role: "search" do %>
    <p>
      <%= text_field_tag :search, params[:search], placeholder: "Search" %>
      <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
    </p>
<% end %>

<%= link_to "All Brokers", brokers_path %>


<h1>Listing Brokers</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Broker Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Direct Phone</th>
        <th>Company</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @brokers.each do |broker| %>
        <tr>
          <td><%= broker.first_name %> <%= broker.last_name %></td>
        <td><%= broker.email %></td>
        <td><%= broker.mobile %></td>
        <td><%= broker.direct_phone %></td>
        <td><%= broker.company %></td>
  
        <td><%= link_to 'Show', broker %></td>
            <td><%= link_to 'Edit', edit_broker_path(broker) %></td>
        <td><%= link_to 'Destroy', broker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
    </tr>
  </tbody>
</table>
<br>

<%= link_to 'New Broker', new_broker_path %>
