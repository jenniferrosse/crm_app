<div class="container">



<%= form_tag search_brokers_path, method: :get, role: "search" do %>
        <p>
          <%= text_field_tag :search, params[:search], placeholder: "Search" %>
          <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
        </p>
      <% end %>

<%= link_to 'New Broker', new_broker_path %>
<br>
<br>
<p>
  Download: 
  <%= link_to "CSV", brokers_path(format: "csv") %> |
  <%= link_to "Excel", brokers_path(format: "xls") %>
</p>

<h1>Listing Brokers</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Broker Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Direct Phone</th>
        <th>Company</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @brokers.each do |broker| %>
        <tr>
          <td><%= link_to "#{broker.first_name} #{broker.last_name}", broker %></td>
        <td><%= broker.email %></td>
        <td><%= broker.mobile %></td>
        <td><%= broker.direct_phone %></td>
        <td><%= broker.company %></td>
  
        <td><%= link_to 'Destroy', broker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
    </tr>
  </tbody>
</table>
<br>

<%= link_to 'New Broker', new_broker_path %>
