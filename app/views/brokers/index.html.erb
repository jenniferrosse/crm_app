<div class="container">

<p id="notice"><%= notice %></p>

<h1>Listing Brokers</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Broker Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Direct Phone</th>
        <th>Company</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @brokers.each do |broker| %>
        <tr>
          <td><%= broker.first_name %> <%= broker.last_name %></td>
        <td><%= broker.email %></td>
        <td><%= broker.mobile %></td>
        <td><%= broker.direct_phone %></td>
        <td><%= broker.company %></td>
  
        <%= link_to 'Show', broker %>        <%= link_to 'Edit', edit_broker_path(broker) %>
        <%= link_to 'Destroy', broker, method: :delete, data: { confirm: 'Are you sure?' } %></br></br>
    <% end %>
    </tr>
  </tbody>
</table>
<br>

<%= link_to 'New Broker', new_broker_path %>
