<div class="container">
   
   <p class="text-center hidden-print" >
     <%= link_to 'Back', commercial_leads_active_index_path %> |
     <%= link_to 'Edit', edit_commercial_lead_path(@commercial_lead) %> |
     <%= link_to 'Print', commercial_leads_path, :onclick => 'window.print();return false;' %>
   </p>



    <div class="row">
      <div class="col-md-8 col-sm-7 col-sm-offset-1 col-xs-6 col-xs-offset-1">
        <br>
        <br>
        <dl class="dl-horizontal">
          <dt>Use:</dt>
          <dd><%= @commercial_lead.use %></dd>
          <dt>Company:</dt>
          <dd><%= @commercial_lead.company_name %></dd>
          <dt>Website:</dt>
          <dd><%= markdown@commercial_lead.website %></dd>
          <dt>Primary Contact:</dt>
          <dd><%= @commercial_lead.first_name %> <%= @commercial_lead.last_name %></dd>
          <dt>Broker:</dt>
          <% if @commercial_lead.broker.present? %>
          <dd><%= @commercial_lead.broker.first_name%> <%= @commercial_lead.broker.last_name%><% end %> (<%= @commercial_lead.old_broker%>)</dd>
          <hr>
          <dt>Occupancy Date:</dt>
          <dd><%= @commercial_lead.occupancy_date.try(:strftime, "%m/%d/%Y") %></dd>
          <dt>Square Footage:</dt>
          <dd><%= @commercial_lead.size %> sq ft</dd>
          <dt>Max Budget:</dt>
          <dd>$<%= @commercial_lead.budget_max %></dd>
          <hr>
          <dt>Description:</dt>
          <dd><%= markdown@commercial_lead.description %></dd>
          <hr>
          <dt>Notes:</dt>
          <dd><%= markdown@commercial_lead.notes %></dd>
        </dl>          
      </div>
      <div class="col-md-3 col-s-3 col-xs-4">
        <table class="table table-bordered">
          <tr class="warning">
            <td>Active?</td>
            <td><%= human_boolean@commercial_lead.follow_up %></td>
          </tr>
          <tr>
            <td>Status</td>
            <td><%= @commercial_lead.status %></td>
          </tr>
          <tr>
            <td>Next Follow Up</td>
            <% if @commercial_lead.follow_up == true %>
              <td class="danger"><%= @commercial_lead.next_follow_up.try(:strftime, "%m/%d/%Y") %></td>
            <% else %>
              <td><%= @commercial_lead.next_follow_up.try(:strftime, "%m/%d/%Y") %></td>
            <% end %>
          </tr>
        </table>   
        <h4>Appointment Info</h4>
        <table class="table table-bordered">
          <tr>
            <td>Properties suggested:</td>
            <td><%= markdown@commercial_lead.properties_suggested %></td>
          </tr>
          <tr class="warning">
            <td>Appointment Date:</td>
            <td><%= @commercial_lead.appointment_date.try(:strftime, "%m/%d/%Y") %></td>
          </tr>
          <tr>
            <td>Properties Shown:</td>
            <td><%= markdown@commercial_lead.properties_shown %></td>
          </tr>
        </table>
        <h4>Primary Contact Info</h4>
        <table class="table table-bordered">
          <tr>
            <td>Name:</td>
            <td><%= @commercial_lead.first_name %> <%= @commercial_lead.last_name %></td>
          </tr>
          <tr>
            <td>Email:</td>
            <td><%= @commercial_lead.email %></td>
          </tr>
          <tr>
            <td>Phone:</td>
            <td><%= @commercial_lead.phone %></td>
          </tr>
        </table> 
      <h4>Tracking Info</h4>
        <table class="table table-bordered">
          <tr>
            <td>First Contact:</td>
            <td><%= @commercial_lead.contact_date.try(:strftime, "%m/%d/%Y") %></td>
          </tr>
          <tr>
            <td>Source:</td>
            <td><%= @commercial_lead.source.name %></td>
          </tr>
          <tr>
            <td>Properties Referenced:</td>
            <td><%= markdown@commercial_lead.properties_referenced %>
          </tr>
        </table>
      </div>
</div>
   

<p class="text-center hidden-print">
  <%= link_to 'Back', commercial_leads_active_index_path %> |
  <%= link_to 'Edit', edit_commercial_lead_path(@commercial_lead) %>
  
</p>

</div>