<div class="container">

<%= link_to 'New Unit', new_unit_path %>

<%= form_tag search_units_path, method: :get, role: "search" do %>
        <p>
          <%= text_field_tag :search, params[:search], placeholder: "Search" %>
          <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
        </p>
      <% end %>

 <%= link_to "All Units", units_path %>

<h1>Units <small>Search results</small></h1>


  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= sortable "lease_end_date" %></th>
        <th><%= sortable "unit_id", "Unit" %></th>
        <th><%= sortable "sq_ft" %></th>
        <th><%= sortable "market_rent" %></th>
        <th><%= sortable "propects" %></th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @available_units.each do |available_unit| %>
        <tr>
          <td><%= unit.lease_end_date.strftime("%m/%d/%Y") %></td>
          <td><%= link_to unit.unit_id, unit %></td>
          <td><%= unit.sq_ft %></td>
          <td><%= unit.market_rent %></td>
          <td><%= unit.prospects %></td>

        
          <td><%= link_to 'Delete', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Unit', new_unit_path %>

</div>