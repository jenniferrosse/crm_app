<div class="container">

<%= link_to 'New Unit', new_unit_path %>

<%= form_tag search_units_path, method: :get, role: "search" do %>
        <p>
          <%= text_field_tag :search, params[:search], placeholder: "Search" %>
          <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
        </p>
      <% end %>

<h1>Units</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= sortable "unit_number", "Unit" %></th>
        <th><%= sortable "property" %></th>
        <th><%= sortable "sq_ft" %></th>
        <th><%= sortable "market_rent" %></th>
        <th><%= sortable "available" %></th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @units.each do |unit| %>
        <tr>
          <td><%= link_to unit.unit_number, unit %></td>
          <td><% if unit.property.present? %><%= unit.property.name %><% else %> No Property<% end %></td>
          <td><%= unit.sq_ft %></td>
          <td>$<%= unit.market_rent %></td>
          <td><%= human_boolean(unit.available) %></td>
          
          <td><%= link_to 'Delete', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Unit', new_unit_path %>

</div>