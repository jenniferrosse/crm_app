<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listing Use Types</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @use_types.each do |use_type| %>
        <tr>
          <td><%= use_type.name %></td>
          <td><%= link_to 'Show', use_type %></td>
          <td><%= link_to 'Edit', edit_use_type_path(use_type) %></td>
          <td><%= link_to 'Destroy', use_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Use type', new_use_type_path %>
</div>