<div class="container">


<%= form_tag search_units_path, method: :get, role: "search" do %>
        <p>
          <%= text_field_tag :search, params[:search], placeholder: "Search" %>
          <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
        </p>
      <% end %>

<h1>Available Units</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Unit</th>
        <th>Property</th>
        <th>SQ FT</th>
        <th>Market Rent</th>
        <th>Available</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @available_units.each do |unit| %>
        <tr>
          <td><%= link_to unit.unit_number, unit %></td>
          <td><%=link_to unit.property.try(:name), unit.property %></td>
          <td><%= number_with_delimiter(unit.sq_ft) %></td>
          <td>$<%= unit.market_rent %></td>
          <td><%= human_boolean(unit.available) %></td>
          
          <td><%= link_to 'Delete', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
  </tbody>
</table>


<br>

</div>